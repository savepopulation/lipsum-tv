<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/large_size"
        android:paddingBottom="@dimen/large_size"
        android:paddingLeft="@dimen/huge_size"
        android:paddingRight="@dimen/huge_size"
        android:background="@drawable/background_suggestion_dialog">


        <TextView
            style="@style/DefaultTitleStyle"
            android:text="@string/dialog_title_suggestion"
            android:singleLine="true"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputlayout_link"
            style="@style/InputDesignWrapperStyle"
            android:layout_marginTop="@dimen/full_size">

            <EditText
                android:id="@+id/edittext_link"
                style="@style/EditTextStyle"
                android:hint="@string/hint_youtube_link"
                android:maxLength="@integer/default_max_length" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputlayout_sender"
            style="@style/InputDesignWrapperStyle">

            <EditText
                android:id="@+id/edittext_sender"
                style="@style/EditTextStyle"
                android:hint="@string/hint_sender"
                android:maxLength="@integer/default_name_length" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_send"
            style="@style/DefaultButton"
            android:layout_marginTop="@dimen/large_size"
            android:text="@string/button_send" />

    </LinearLayout>

</ScrollView>